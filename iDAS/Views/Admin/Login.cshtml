@using System.Web.Optimization
@*@using NavigationRoutes*@
@model iDAS.Models.ModelAdminUser
@{
    ViewBag.Title = "Admin Login";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Now News Admin Panel</title>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800&subset=latin,cyrillic-ext,latin-ext' rel='stylesheet' type='text/css'>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet" />*@
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/style-responsive.css" rel="stylesheet" />
    <link href="~/content/css/halflings-Login.css" rel="stylesheet" />

    @Html.Partial("_html5shiv")
    @* favicons and touch icons go here *@

    <!-- start: Favicon -->
    <link rel="shortcut icon" href=@Url.Content("~/Content/images/favicon.ico")>
    <!-- end: Favicon -->

    <style type="text/css">
        body {
            background: url(../Content/images/bg-login.jpg) !important;
        }
    </style>

</head>
<body>
    <div class="container-fluid-full">
        <div class="row-fluid">
            <div class="row-fluid">
                <div class="login-box">
                    <div class="icons">
                        <a href="index.html"><i class="halflings-icon home"></i></a>
                        <a href="#"><i class="halflings-icon cog"></i></a>
                    </div>
                    @Html.Partial("_alerts")
                    @Html.Partial("_validationSummary")
                    <h2>Login to your account</h2>

                    @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <div class="col-xs-10">
                                <div class="col-xs-2"></div>
                                <div class="input-group">
                                    <span class="input-group-addon" id="basic-addonUser"><i class="halflings-icon user"></i></span>
                                    @Html.TextBoxFor(m => m.UserEmail, new { @class = "form-control", placeholder = "User Name", aria_describedby = "basic-addonUser" })
                                    @Html.ValidationMessageFor(m => m.UserEmail)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-10">
                                <div class="col-xs-2"></div>
                                <div class="input-group">
                                    <span class="input-group-addon" id="basic-addonLock"><i class="halflings-icon lock"></i></span>
                                    @Html.TextBoxFor(m => m.UserPassword, new { @class = "form-control", placeholder = "Password", aria_describedby = "basic-addonLock" })
                                    @Html.ValidationMessageFor(m => m.UserPassword)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-offset-2 col-xs-10">
                                <div class="checkbox">
                                    <label><input type="checkbox" id="RememberMe"> Remember me</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-offset-2 col-xs-10">
                                <button type="submit" class="btn btn-primary">Login</button>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    }
                    <hr>
                    <h3>Forgot Password?</h3>
                    <p>
                        No problem, <a href="#">click here</a> to get a new password.
                    </p>
                </div><!--/row-->
            </div><!--/.fluid-container-->

        </div><!--/fluid-row-->
    </div>

    <!-- start: JavaScript-->

    <script src="~/Scripts/jquery-2.2.3.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>

    @*<script src="~/scripts/jquery-1.9.1.min.js"></script>*@

    @*<script src="~/scripts/jquery-migrate-1.0.0.min.js"></script>*@

    <script src="~/scripts/jquery-migrate-1.2.1.min.js"></script>

    <script src="~/scripts/jquery-ui-1.10.0.custom.min.js"></script>

    <script src="~/scripts/jquery.ui.touch-punch.js"></script>

    <script src="~/scripts/modernizr.js"></script>

    <script src="~/scripts/jquery.cookie.js"></script>

    @*<script src='~/scripts/js/fullcalendar.min.js'></script>

        <script src='~/scripts/js/jquery.dataTables.min.js'></script>
        <script src="~/scripts/js/excanvas.js"></script>
        <script src="~/scripts/js/jquery.flot.js"></script>
        <script src="~/scripts/js/jquery.flot.pie.js"></script>
        <script src="~/scripts/js/jquery.flot.stack.js"></script>
        <script src="~/scripts/js/jquery.flot.resize.min.js"></script>

        <script src="~/scripts/js/jquery.chosen.min.js"></script>

        <script src="~/scripts/js/jquery.uniform.min.js"></script>

        <script src="~/scripts/js/jquery.cleditor.min.js"></script>

        <script src="~/scripts/js/jquery.noty.js"></script>

        <script src="~/scripts/js/jquery.elfinder.min.js"></script>

        <script src="~/scripts/js/jquery.raty.min.js"></script>

        <script src="~/scripts/js/jquery.iphone.toggle.js"></script>

        <script src="~/scripts/js/jquery.uploadify-3.1.min.js"></script>*@

    <script src="~/scripts/jquery.gritter.min.js"></script>

    <script src="~/scripts/jquery.imagesloaded.js"></script>

    <script src="~/scripts/jquery.masonry.min.js"></script>

    <script src="~/scripts/jquery.knob.modified.js"></script>

    <script src="~/scripts/jquery.sparkline.min.js"></script>

    <script src="~/scripts/counter.js"></script>

    <script src="~/scripts/retina.js"></script>

    @*<script src="~/scripts/js/custom.js"></script>*@
    <!-- end: JavaScript-->

</body>
</html>
