@using System.Web.Optimization
@*@using NavigationRoutes*@
@model iDAS.Models.ModelStudentFee
@{
    ViewBag.Title = "Edit Student Monthly Fee";
    Layout = null;
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

            <div class="x_content">
                @Html.Partial("_alerts")
                @Html.Partial("_validationSummary")
                <br />
                @*@using (Html.BeginForm("UpdateStudentInfo", "StudentData", FormMethod.Post, new { @class = "form-horizontal", id = "frmEditStudentMonthlyFee" }))*@
                @using (Ajax.BeginForm("UpdateStudentMonthlyFeeRecord", "StudentFee", new AjaxOptions
                {
                    HttpMethod = "POST",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "dvStudentMonthlyFeeInfoForm",
                    OnSuccess = "HideUpdateStudentFeeModel();"
                 }, new { @class = "form-horizontal", id = "frmEditStudentMonthlyFee" }))
                {
                    @Html.HiddenFor(m => m.FeeId)
                    @Html.HiddenFor(m => m.StudentId)
                    @Html.HiddenFor(m => m.ComputerCode)
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-3" for="first-name">
                            Admission Fee # <span class="required">*</span>
                        </label>
                        <div class="col-md-3 col-sm-3 col-md-3">
                            @Html.TextBoxFor(m => m.AdmissionFee, new { @class = "form-control col-md-3 col-md-3", @type = "number", })

                        </div>

                        <label class="control-label col-md-3 col-sm-3 col-xs-3" for="first-name">
                            Admission : <span class="required">*</span>
                        </label>
                        <div class="col-md-3 col-sm-3 col-md-3">
                            @Html.TextBoxFor(m => m.Admission, new { @class = "form-control col-md-3 col-md-3", @type = "number", })

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-3" for="first-name">
                            Re Admission Fee : <span class="required">*</span>
                        </label>
                        <div class="col-md-3 col-sm-3 col-md-3">
                            @Html.TextBoxFor(m => m.ReAdmissionFee, new { @class = "form-control col-md-3 col-md-3", @type = "number", })

                        </div>

                        <label class="control-label col-md-3 col-sm-3 col-xs-3" for="first-name">
                            Registration Fee : <span class="required">*</span>
                        </label>
                        <div class="col-md-3 col-sm-3 col-md-3">
                            @Html.TextBoxFor(m => m.RegistrationFee, new { @class = "form-control col-md-3 col-md-3", @type = "number", })

                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-3" for="first-name">
                            Monthly Fee : <span class="required">*</span>
                        </label>
                        <div class="col-md-3 col-sm-3 col-md-3">
                            @Html.TextBoxFor(m => m.MonthlyFee, new { @class = "form-control col-md-3 col-md-3", @type = "number", })

                        </div>

                        <label class="control-label col-md-3 col-sm-3 col-xs-3" for="first-name">
                            Computer Fee : <span class="required">*</span>
                        </label>
                        <div class="col-md-3 col-sm-3 col-md-3">
                            @Html.TextBoxFor(m => m.ComputerFee, new { @class = "form-control col-md-3 col-md-3", @type = "number", })

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-3" for="first-name">
                            Fine : <span class="required">*</span>
                        </label>
                        <div class="col-md-3 col-sm-3 col-md-3">
                            @Html.TextBoxFor(m => m.Fine, new { @class = "form-control col-md-3 col-md-3", @type = "number", })

                        </div>

                        <label class="control-label col-md-3 col-sm-3 col-xs-3" for="first-name">
                            Examination Fee : <span class="required">*</span>
                        </label>
                        <div class="col-md-3 col-sm-3 col-md-3">
                            @Html.TextBoxFor(m => m.ExamFee, new { @class = "form-control col-md-3 col-md-3", @type = "number", })

                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-3" for="first-name">
                            Generator Fee : <span class="required">*</span>
                        </label>
                        <div class="col-md-3 col-sm-3 col-md-3">
                            @Html.TextBoxFor(m => m.GeneratorFee, new { @class = "form-control col-md-3 col-md-3", @type = "number", })

                        </div>

                        <label class="control-label col-md-3 col-sm-3 col-xs-3" for="first-name">
                            @*Examination Fee : <span class="required">*</span>*@
                        </label>
                        <div class="col-md-3 col-sm-3 col-md-3">
                            @*@Html.TextBoxFor(m => m.ExamFee, new { @class = "form-control col-md-3 col-md-3", @type = "number", })*@

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
