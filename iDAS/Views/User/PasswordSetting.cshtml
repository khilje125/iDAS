@using System.Web.Optimization
@model iDAS.Models.ModelMerchantUser
@{
    ViewBag.Title = "Merchant Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hala Payment Service! | </title>
    <!-- Bootstrap -->
    <link href="../vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="../Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Animate.css -->
    <link href="https://colorlib.com/polygon/gentelella/css/animate.min.css" rel="stylesheet">
    <!-- Custom Theme Style -->
    <link href="../Content/css/iPaymentService.min.css" rel="stylesheet">
    <script src="~/Scripts/jquery-2.2.3.min.js"></script>
    <script src="~/vendors/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/vendors/validator/validator.min.js"></script>

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>
        <div class="login_wrapper">
            <div class="animate form login_form">
                @Html.Partial("_alerts")
                <section class="login_content">

                    @using (Html.BeginForm("SetupNewPassword", "Merchant", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <h1>Setup new Password</h1>
                        <div>
                            @Html.HiddenFor(m => m.MerchantEmail)
                            @Html.TextBoxFor(m => m.MerchantPassword, new { @class = "form-control", placeholder = "Password", type = "password" })
                            @Html.ValidationMessageFor(m => m.MerchantPassword, string.Empty, new { @class = "help-block error" })
                        </div>

                        <div>
                            @Html.TextBoxFor(m => m.MerchantPasswordConfirm, new { @class = "form-control", placeholder = "Re-enter Password", type = "password" })
                            @Html.ValidationMessageFor(m => m.MerchantPasswordConfirm, string.Empty, new { @class = "help-block error" })
                        </div>
                        
                        <div>
                            <input type="submit" class="btn btn-info submit" value="Submit" />
                        </div>
                        <div class="clearfix"></div>
                        <div class="separator">
                            <div class="clearfix"></div>
                            <br />
                            <div>
                                <h1><i class="fa fa-paw"></i> Payment Service!</h1>
                                <p>All Rights Reserved. CM Technologies (Payment Service) &copy; Company @System.DateTime.Now.ToString("yyyy")</p>
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>
</body>
</html>