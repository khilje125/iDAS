@{
    ViewBag.Title = "GetBankChallanVoucher";
    Layout = "~/Views/Shared/_MerchantLayout.cshtml";
}
<!-- bootstrap-daterangepicker -->
<script type="text/javascript">
    $(document).ready(function () {

        $('#txtVourcherDueDate').daterangepicker({
            singleDatePicker: true,
            calender_style: "picker_2"
        }, function (start, end, label) {
            console.log(start.toISOString(), end.toISOString(), label);
        });
    });

</script>
<!-- /bootstrap-daterangepicker -->
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Student Information <small>find student with search</small></h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Search</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    
                    @Html.Partial("_alerts")
                    @Html.Partial("_validationSummary")
                    <div id="dvMessaheAlert"></div>
                    <br />
                    <div id="search-form">

                        <div class="x_panel">
                            <div class="x_title">
                                <h2>Students <small>saerch student by info.</small></h2>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <br />
                                @using (Ajax.BeginForm("GetBankChallanVoucher", "StudentReport", FormMethod.Post,
                                new AjaxOptions
                                {
                                    InsertionMode = InsertionMode.Replace,
                                    HttpMethod = "POST",
                                    UpdateTargetId = "search-results",
                                    Confirm = "Are you sure to want generate these vouchhers ?",
                                    OnBegin = "ShowAjaxProcessing",
                                    OnSuccess = "ShowAjaxSuccess",
                                    OnFailure = "ShowAjaxFailure",
                                    OnComplete = "ShowAjaxComplete"

                                }, new { @class = "form-horizontal form-label-left" }))
                                {
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Class</label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            @Html.DropDownList("dropDownClass", new SelectList(ViewBag.dpClass, "Value", "Text", "0"), new { @class = "select2_single form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Section</label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            @Html.DropDownList("dropDownSection", new SelectList(ViewBag.dpSection, "Value", "Text", "0"), new { @class = "select2_single form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Due Date</label>
                                        <div class="col-md-6 col-sm-6 col-xs-12 xdisplay_inputx form-group has-feedback">
                                            <input type="text" class="form-control has-feedback-left" id="txtVourcherDueDate" name="txtVourcherDueDate" placeholder="Voucher Due Date" aria-describedby="inputSuccess2Status2">
                                            <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
                                            <span id="inputSuccess2Status2" class="sr-only">(success)</span>
                                        </div>
                                    </div>

                                    <div class="ln_solid"></div>
                                    <div class="form-group">
                                        <div class="col-md-6 col-md-offset-3">

                                            <a href="@Url.Action("GetBankChallanVoucher", "StudentReport")" class="btn btn-primary"><i class="glyphicon glyphicon-refresh white"></i>Reset</a>
                                            @*<button type="submit" class="btn btn-primary">Reset</button>*@
                                            <button id="send" type="submit" class="btn btn-success"><i class="glyphicon glyphicon-record white"></i> Get Fee Vouchers</button>
                                        </div>
                                    </div>

                                }

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_AjaxPageLoading")